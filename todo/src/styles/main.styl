@import '~normalize.css/normalize.css'
@import '~semantic-ui-css/semantic.css'

.container {
  padding-top: 2rem;
}

.ui ul.list {
  margin-left: 0;
}

ul.list .item:before {
  display: none;
}

ul.list .item {
  padding: .5rem;
  overflow: hidden;
}

li.completed {
  text-decoration: line-through;
}

.ui .item .delete {
  border-radius: 0;
  position: absolute;
  right: 0;
  top: 0;
  margin-right: 0;
  transform: translateX(100%);
  transition: transform ease-in-out .2s;
}

.ui .item:hover .delete {
  transform: translateX(0);
}
